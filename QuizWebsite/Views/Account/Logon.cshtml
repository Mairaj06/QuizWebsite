@{
    ViewBag.Title = "Logon";
    Layout = null;
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<link href="~/Content/Site.css" rel="stylesheet" />
<link href="~/Content/ThemeCss/components-md.css" rel="stylesheet" />
<script src="~/Scripts/jquery-3.1.0.js"></script>
<script src="~/Scripts/Common.js"></script>
<div class="col-lg-12 col-md-12 col-sm-12">
    <div class="row paddingTop20">

        <div class="col-lg-4 col-md-4 col-sm-4 col-lg-offset-4 col-md-offset-4 col-sm-offset-4">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Login
                </div>
                <div class="panel-body">
                    <div class="row paddingTop20">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <label>Username</label>
                            <input type="text" id="txtUserName" maxlength="50" class="form-control" />
                        </div>
                    </div>
                    <div class="row paddingTop20">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <label>Password</label>
                            <input type="text" id="txtPassword" maxlength="50" class="form-control" />
                        </div>
                    </div>
                    <div class="row paddingTop20">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <input type="button" value="Login" class="btn btn-primary pull-right" onclick="ValidateUser();" />
                            <input type="button" value="Signup" style="margin-right: 10px" class="btn btn-primary pull-right" />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function ValidateUser() {
        var userName = $("#txtUserName").val();
        var password = $("#txtPassword").val();
        var User = new Object();
        User.UserName = userName;
        User.Password = password;
        APICall("ValidateUser", "SuccessValidateUser", "FailureValidateUser", "POST", JSON.stringify({ User: User }));
    }
