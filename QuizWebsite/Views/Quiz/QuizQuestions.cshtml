@{
    ViewBag.Title = "QuizQuestions";
}
<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <div class="clearfix"></div>

        <div class="row paddingTop20">
        </div>
        <div class="row">
            <div class="panel panel-primary">
                <div class="panel-heading" id="panelHeading">
                </div>
                <div class="panel-body">
                    <div class="row paddingTop20">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <input type="button" class="btn btn-primary pull-right" value="Add Question" onclick="ShowAddQuestionPopUp(0)" />
                        </div>
                    </div>
                    <div class="row paddingTop20">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered" id="tblQuestions">
                                    <thead>
                                        <tr>
                                            <th>Sr.</th>
                                            <th>Question</th>
                                            <th></th>
                                            <th></th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div id="divAddQuestion" class="modal" tabindex="-1" role="dialog" aria-labelledby="costumModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                    data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Add Question
                </h4>
            </div>
            <!-- Modal Body -->
            <div class="modal-body">



                <form id="frmAddQuestion">
                    <div class="alert alert-dismissible formMessage" style="display: none">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <span class="message"></span>

                    </div>

                    <div class="row paddingTop20">
                        <div class="col-lg-2 col-md-2 col-sm-2">

                            <label class="control-label"
                                for="inputName">
                                Question
                            </label>
                        </div>
                        <div class="col-lg-10 col-md-10 col-sm-10">

                            @*<input id="password" type="password" class="validate">*@
                            <textarea id="txtQuestion" maxlength="200" rows="2" class="form-control" required="required"></textarea>



                        </div>
                    </div>
                    <div class="row paddingTop20">
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            Active
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            <div class="material-switch">
                                <input id="chkActive" name="chkActive" type="checkbox" checked="checked" />
                                <label for="chkActive" class="label-success"></label>
                            </div>
                        </div>
                    </div>




                </form>

            </div>







            <div class="modal-footer">
                <button type="button" data-toggle="modal" class="btn btn-primary pull-right" onclick="SaveQuestion()">Save</button>
                <input type="button" class="btn btn-primary" value="Cancel" data-dismiss="modal" style="margin-right: 5px" />
            </div>
        </div>
    </div>

</div>

<div id="divQuestionOptions" class="modal" tabindex="-1" role="dialog" aria-labelledby="costumModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                    data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Add Option
                </h4>
            </div>
            <!-- Modal Body -->
            <div class="modal-body" id="divAddOptions">



                <form id="frmAddOptions">
                    <div class="alert alert-dismissible formMessageOption" style="display: none">
                        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                        <span class="messageOption"></span>

                    </div>

                    <div class="row">
                        <div class="col-lg-12 col-md-12 col-sm-12">
                            <input type="button" class="btn btn-primary pull-right" value="Add Option" onclick="AddOption()" />
                        </div>
                    </div>

                    <div class="row" id="optionsHeader" style="display: none">
                        <hr class="modalHr" />
                        <div class="col-lg-9 col-md-9 col-sm-9">
                            Option Text
                            


                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-2">
                            Correct Option
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-1">
                            Delete
                        </div>
                    </div>




                </form>

            </div>







            <div class="modal-footer">
                <input type="button" class="btn btn-primary" value="Cancel" data-dismiss="modal" />
                <button type="button" data-toggle="modal" class="btn btn-primary pull-right" style="margin-right: 5px" onclick="SaveQuestionOptions()">Save</button>

            </div>
        </div>
    </div>

</div>

<div id="divDeleteQuestion" class="modal" tabindex="-1" role="dialog" aria-labelledby="costumModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                    data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Delete Question
                </h4>
            </div>
            <!-- Modal Body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        Are you sure you want to delete selected question ?
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-primary" value="Cancel" data-dismiss="modal" />
                <button type="button" data-toggle="modal" class="btn btn-primary pull-right" id="btnDeleteQuestion" style="margin-right: 5px" onclick="DeleteQuestion()">Delete</button>

            </div>
        </div>
    </div>

</div>

<div id="divDeleteQuestionOption" class="modal" tabindex="-1" role="dialog" aria-labelledby="costumModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close"
                    data-dismiss="modal">
                    <span aria-hidden="true">&times;</span>
                    <span class="sr-only">Close</span>
                </button>
                <h4 class="modal-title">Delete Option
                </h4>
            </div>
            <!-- Modal Body -->
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12 col-md-12 col-sm-12">
                        Are you sure you want to delete selected option ?
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <input type="button" class="btn btn-primary" value="Cancel" data-dismiss="modal" />
                <button type="button" data-toggle="modal" class="btn btn-primary pull-right" id="btnDeleteQuestionOption" style="margin-right: 5px" onclick="DeleteQuestionOption()">Delete</button>

            </div>
        </div>
    </div>

</div>



<script src="~/Scripts/CustomJs/QuizQuestions.js"></script>


